@model VMModalCadHome
<div id="CadastroBairro" class=" modalCadastro">
    <form asp-controller="Produto" asp-action="CadastrarProduto">
        <div>
            <h3 style="background-color: #106b45; color: white; margin: 0; padding: 13px; text-align: center;">
                CADASTRO
                DE PRODUTO
            </h3>
        </div>

        <!-- <div class="form-group  row m-2">
                  <label class="p-0">Bairro</label> -->
        <!-- <input placeholder="Bairro "> -->
        <!--
                  <select class="form form-control">
                      <option >JD Florianopolis</option>
                      <option>JD união</option>
                  </select>
              </div> -->

        <div class="row " style="padding: 10px;">
            <div class="col-4 form-group">
                <label> CÓDIGO DE BARRA PRODUTO</label>
                <input asp-for="Produto.CodigoBarras" class="margin9 form-control" type="text" >
            </div>

            <div class="col-8 form-group">
                <label>NOME DO PRODUTO</label>
                <input asp-for="Produto.Nome" class="margin9 form-control" type="text" >
            </div>
        </div>

        <div class="row " style="padding: 10px;">

            <div class="col-3 form-group">
                <label>FORNECEDOR</label>
                <select class="form form-control" id="Fornecedor" asp-items="Model.ListFornecedor" asp-for="Produto.FornecedorId">
                    @*@foreach (var item in ViewBag.FornecedorDropDow)
                    {
                        <option value="@item.Id">@item.Nome</option>
                    }*@
                </select>
            </div>

            <div class="col-3 form-group">
                <label>TIPO UNITÁRIO</label>
                <select class="form form-control" asp-for="Produto.TipoUnitarioId" asp-items="Model.ListTipoUnitario">
                    @*@foreach (var item in ViewBag.TipoUnitarioDropDow)
                    {
                        <option value="@item.Id">@item.Nome</option>
                    }*@
                </select>
            </div>


            <div class="col-3 form-group">
                <label>ESTOQUE MINIMO</label>
                <input asp-for="Produto.EstoqueMinimo" class="margin9 form-control" min="0" type="number" >
            </div>

            <div class="col-3 form-group">
                <label>ESTOQUE MÁXIMO</label>
                <input asp-for="Produto.EstoqueMaximo" class="margin9 form-control" min="0" type="number" >
            </div>


        </div>

        <div class="row " style="padding: 10px;">
            <div class="col-12 form-group">
                <label>CATEGORIA</label>
                <select class="form form-control" asp-for="Produto.CategoriaId" asp-items="Model.ListCategorias">
                    @*@foreach (var item in ViewBag.CategoriaDropDow)
                    {
                        <option value="@item.Id">@item.Nome</option>
                    }*@
                </select>
            </div>
        </div>
        <div class="row" style="width: 97%;margin-left: 10px;">
            <div class="form-group ">
                <label for="exampleFormControlTextarea1">DESCRIÇÃO DO PRODUTO</label>
                <textarea asp-for="Produto.Descricao" style="margin-top: 0px;margin-bottom: 0px;height: 128px;width: 715px;" class="form-control" id="exampleFormControlTextarea1 " rows="6"></textarea>
            </div>
        </div>

        <div class="m-2" style=" height: 112px;">
            <div class="row" style="padding-left: 14px; padding-top: 23px;    padding-left: 14px;
        padding-top: 23px;
        WIDTH: 44%;
        MARGIN: auto;">

                <div class="col-2 Width144 form-group">
                    <button class="form-control heigth63 btnVoltar">VOLTAR</button>
                </div>
                <div class="col-2 Width144 form-group">
                    <a href="#" rel="modal:close"><button class="form-control heigth63 btnSalvar">SALVAR</button></a>
                </div>

            </div>
        </div>
    </form>

</div>



