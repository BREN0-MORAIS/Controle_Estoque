@model VMModalCadHome

<div id="CadastroBairro" class=" modalCadastro">
    <form asp-action="Cadastrar" asp-controller="EntradaSaida">
        <div>
            <h3 style="background-color: #106b45; color: white; margin: 0; padding: 13px; text-align: center;">
                ENTRADA E SAIDA DE PRODUTOS
            </h3>
        </div>


        <div class="row " style="padding: 10px;">
            <div class="col-12 form-group">
                <label>NOME DO PRODUTO</label>
                <select class="form form-control" asp-items="Model.ListProduto" asp-for="EntradaSaida.ProdutoId">
                </select>
            </div>
        </div>

        <div class="row " style="padding: 10px;">
            <div class="col-3 form-group">
                <label>DATA</label>
                <input asp-for="EntradaSaida.Data"  class="margin9 form-control" type="date" >
            </div>

            <div class="col-3 form-group">
                <label>QUANTIDADE</label>
                <input asp-for="EntradaSaida.Quantidade" class="margin9 form-control" type="number">
            </div>

            <div class="col-3 form-group">
                <label>VALOR</label>
                <input asp-for="EntradaSaida.Preco" class="margin9 form-control" type="number" >
            </div>

            <div class="col-3 form-group">
                <label>TOTAL</label>
                <input class="margin9 form-control" type="number" name="" id="">
            </div>
        </div>

        <div class="row " style="padding: 10px;">

            <div class="col-12 form-group" a>
                <label>TIPO</label>
                <select class="form form-control" asp-for="EntradaSaida.Tipo">
                    <option value="ENTRADA">ENTRADA</option>
                    <option value="SAIDA">SAIDA</option>
                </select>
            </div>


      
        </div>


        <div class="m-2" style=" height: 112px;">
            <div class="row" style="padding-left: 14px; padding-top: 23px;    padding-left: 14px;padding-top: 23px; WIDTH: 44%; MARGIN: auto;">

                <div class="col-2 Width144 form-group">
                    <button class="form-control heigth63 btnVoltar">VOLTAR</button>
                </div>

                <div class="col-2 Width144 form-group">
                    <button class="form-control heigth63 btnSalvar">SALVAR</button>
                </div>

            </div>
        </div>
    </form>

</div>



<style>
    .modalCadastro {
        width: 90%;
        height: 80%;
        /* margin: 0; */
        /* padding: 0; */
        max-width: 740px;
        margin-left: 174px;
        border: 1px solid #00000038;
        margin-top: 29px;
        /* padding: 8px; */
        border-radius: 4px;
    }

    .heigth63 {
        height: 63px;
    }

    .Width144 {
        width: 144px;
    }

    a {
        text-decoration: none;
    }

    .modal a.close-modal {
        top: 12.5px;
        margin-right: 19px;
    }

    .btnSalvar {
        background-color: #177117;
        color: white;
        width: 125px;
        margin-left: 111px;
    }

    .btnVoltar {
        color: white;
        background-color: #0e330e;
        width: 125px;
    }
</style>
